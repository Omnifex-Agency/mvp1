{
    "manifest_version": 3,
    "name": "HighlightAgent",
    "version": "1.0",
    "description": "Capture snippets, schedule AI reminders.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "offscreen"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://ztwcpkaunjtaftvdirqd.supabase.co/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Save to HighlightAgent"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}